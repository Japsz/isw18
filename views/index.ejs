<script type="text/javascript">
  $("#busq_stock").submit(function(e){
      e.preventDefault();
      $("#fsubmit").html("");
      $("#estado").html('<div id="estado" style="margin: 5px;margin-left:45%"><h3>Cargando ...</h3></div>');
      var array = $(this).serializeArray();
      var data = {};
      console.log(array);
      for(var i = 0;i<array.length;i++){
          data[array[i]['name']] = array[i]['value'];
      }
      if(data.symbol){
          $.ajax({
              type: 'post',
              data: data,
              url: '/get_quote',
              success: function(data){
                  $("#fsubmit").html('<i class="glyphicon glyphicon-search" style="margin: 0;padding: 5px; font-size:35px;text-shadow:2px 2px 4px #000000"></i>');
                  $("#estado").html("");
                  $("#stock_rows").html(data);
              }
          });
      }

  }); 
</script>

